<Window x:Class="SimpleWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <Button Margin="10,10,10,10" Width="100" HorizontalAlignment="Left" Click="Button_Click">Start</Button>
            <ProgressBar x:Name="progressBar" Margin="10,10,10,10" Maximum="10000" Height="10" Width="200" HorizontalAlignment="Left"></ProgressBar>
            <CheckBox x:Name="checkBox" Margin="10,10,10,10" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
